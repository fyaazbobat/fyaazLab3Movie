@model IEnumerable<fyaazGouthamLab3.Models.Movie>

@{ IEnumerable<fyaazGouthamLab3.Models.Movie> topMovies =
                    Model.Where(m => m.Id >= 0).ToList(); }


@{ ViewData["Title"] = "Top movies"; }

<h1 class="mb-4">Top Movies</h1>

<div class="mb-5">
    @foreach (var item in topMovies)
    {
<div class="card" style="width: 10rem; display:inline-block">
    <img class="card-img-top" src="@Url.Content(item.UrlImage)" alt="Movie Image" style="width: 158px; height: 250px; ">
    <div class="card-body" style="width: 190px;">
        <h5 class="card-title">@Html.DisplayFor(modelitem => item.Title)</h5>
        <p class="card-text text-primary">@Html.DisplayFor(modelItem => item.ReleaseDate)</p>
        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-dark" })
    </div>
</div>}
</div>

